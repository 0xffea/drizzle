	$(AM_LDFLAGS) \
	-version-info \
	$(LIBDRIZZLE_LIBRARY_VERSION)

libdrizzle_libdrizzle_la_SOURCES= \
	libdrizzle/drizzle.c \
	libdrizzle/conn.c \
	libdrizzle/conn_uds.c \
	libdrizzle/handshake.c \
	libdrizzle/command.c \
	libdrizzle/query.c \
	libdrizzle/result.c \
	libdrizzle/column.c \
	libdrizzle/row.c \
	libdrizzle/field.c \
