# this statement should be 'optimized away'.
explain select count (*) from t1;

# overflow
--error 1264
insert into t1 values (2147483648, 1, 1);

# duplicates 
--error 1062
insert into t1 values (1, 0, 0);
--error 1062
insert into t1 values (2, 0, 0);
--error 1062
insert into t1 values (3, 0, 0);
