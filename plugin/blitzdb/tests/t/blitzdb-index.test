# +------------------+
# | PRIMARY KEY: INT |
# +------------------+ 
create table t1 (id int primary key, a int, b int) engine = blitzdb;
select * from t1;
insert into t1 values (1, 1, 1), (2, 2, 2), (3, 3, 3), (4, 4, 4);
insert into t1 values (5, 5, 5), (6, 6, 6), (7, 7, 7), (8, 8, 8);
