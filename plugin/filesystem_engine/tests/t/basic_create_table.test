--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

# test file not existed
--replace_result $DRIZZLETEST_VARDIR VARDIR
--error ER_CANT_CREATE_TABLE
eval CREATE TABLE t1 (a INT) ENGINE=FILESYSTEM,FILE="$DRIZZLETEST_VARDIR/filesystem_ln/_FILE_NOT_EXISTED_";

# test col separator not empty
--replace_result $DRIZZLETEST_VARDIR VARDIR
--error ER_UNKNOWN_ENGINE_OPTION
eval CREATE TABLE t1 (a INT) ENGINE=FILESYSTEM,FILE="$DRIZZLETEST_VARDIR/filesystem_ln/basic_create_table.data",COL_SEPARATOR="";

# test row separator not empty
--replace_result $DRIZZLETEST_VARDIR VARDIR
--error ER_UNKNOWN_ENGINE_OPTION
eval CREATE TABLE t1 (a INT) ENGINE=FILESYSTEM,FILE="$DRIZZLETEST_VARDIR/filesystem_ln/basic_create_table.data",ROW_SEPARATOR="";

--replace_result $DRIZZLETEST_VARDIR VARDIR
eval CREATE TABLE t1 (a INT) ENGINE=FILESYSTEM,FILE="$DRIZZLETEST_VARDIR/filesystem_ln/basic_create_table.data";

# test table existed
--replace_result $DRIZZLETEST_VARDIR VARDIR
--error ER_TABLE_EXISTS_ERROR
eval CREATE TABLE t1 (a INT) ENGINE=FILESYSTEM,FILE="$DRIZZLETEST_VARDIR/filesystem_ln/basic_create_table.data";

SHOW CREATE TABLE t1;

DROP TABLE t1;
