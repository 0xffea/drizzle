# Test alter table
--disable_warnings
DROP TABLE IF EXISTS a;
--enable_warnings
CREATE TABLE a (i int,  PRIMARY KEY (i));
ALTER TABLE a ADD COLUMN j int;
SELECT * FROM DATA_DICTIONARY.SQL_COMMANDS_BY_USER;

