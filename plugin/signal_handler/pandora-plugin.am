## Generated by register_plugins.py
EXTRA_DIST += plugin/signal_handler/pandora-plugin.ac

${top_srcdir}/plugin/signal_handler/pandora-plugin.am: ${top_srcdir}/config/register_plugins.py plugin/signal_handler/.plugin.ini.stamp

${top_srcdir}/plugin/signal_handler/pandora-plugin.ac: ${top_srcdir}/config/register_plugins.py plugin/signal_handler/.plugin.ini.stamp

configure: ${top_srcdir}/plugin/signal_handler/pandora-plugin.ac

# Prevent errors when a plugin dir is removed
plugin/signal_handler/plugin.ini:

# Failures to update the plugin.ini are ignored to permit plugins to be deleted
# cleanly.
${top_srcdir}/plugin/signal_handler/.plugin.ini.stamp: plugin/signal_handler/plugin.ini
	@if [ ! -e ${top_srcdir}/plugin/signal_handler/plugin.ini ]; then \
	    echo "plugin/signal_handler/plugin.ini is missing"; \
	else \
	    cmp -s $< $@; \
	    if [ $$? -ne 0 ]; then \
	      echo 'cd ${srcdir} && python config/register_plugins.py ${top_srcdir} plugin/signal_handler'; \
	      unchanged=`cd ${srcdir} && python config/register_plugins.py ${top_srcdir} plugin/signal_handler` ;\
	      if [ $$? -ne 0 ]; then \
	        echo "**** register_plugins failed ****"; \
	        false; \
	      fi && \
	      for plugin_dir in $$unchanged; do \
	        echo "plugin $$plugin_dir unchanged." ; \
	        touch -r $$plugin_dir/pandora-plugin.am $$plugin_dir/.plugin.ini.stamp; \
	      done && \
              cp -a $< $@ || echo "Failed to update $@"; \
	    fi; \
	fi

plugin_libsignal_handler_dir=${top_srcdir}/plugin/signal_handler
EXTRA_DIST += plugin/signal_handler/plugin.ini
