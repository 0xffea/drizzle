  plugin_libheap_plugin_la_DEPENDENCIES=plugin/heap/libheap.la mysys/libmysys.la mystrings/libmystrings.la
  plugin_libheap_plugin_la_LDFLAGS=$(AM_LDFLAGS) 
  plugin_libheap_plugin_la_CPPFLAGS=$(AM_CPPFLAGS) 
  plugin_libheap_plugin_la_CXXFLAGS=$(AM_CXXFLAGS) 
  plugin_libheap_plugin_la_CFLAGS=$(AM_CFLAGS) 

  plugin_libheap_plugin_la_SOURCES= plugin/heap/ha_heap.cc
  PANDORA_DYNAMIC_LDADDS+=${top_builddir}/plugin/libheap_plugin.la
endif
