## Generated by register_plugins.py
EXTRA_DIST += plugin/auth_pam/pandora-plugin.ac

${top_srcdir}/plugin/auth_pam/pandora-plugin.am: ${top_srcdir}/config/register_plugins.py plugin/auth_pam/.plugin.ini.stamp

${top_srcdir}/plugin/auth_pam/pandora-plugin.ac: ${top_srcdir}/config/register_plugins.py plugin/auth_pam/.plugin.ini.stamp

configure: ${top_srcdir}/plugin/auth_pam/pandora-plugin.ac

# Prevent errors when a plugin dir is removed
plugin/auth_pam/plugin.ini:

# Failures to update the plugin.ini are ignored to permit plugins to be deleted
# cleanly.
${top_srcdir}/plugin/auth_pam/.plugin.ini.stamp: plugin/auth_pam/plugin.ini
	@if [ ! -e ${top_srcdir}/plugin/auth_pam/plugin.ini ]; then \
	    echo "plugin/auth_pam/plugin.ini is missing"; \
	else \
	    cmp -s $< $@; \
	    if [ $$? -ne 0 ]; then \
	      echo 'cd ${srcdir} && python config/register_plugins.py ${top_srcdir} plugin/auth_pam'; \
	      unchanged=`cd ${srcdir} && python config/register_plugins.py ${top_srcdir} plugin/auth_pam` ;\
	      if [ $$? -ne 0 ]; then \
	        echo "**** register_plugins failed ****"; \
	        false; \
	      fi && \
	      for plugin_dir in $$unchanged; do \
	        echo "plugin $$plugin_dir unchanged." ; \
	        touch -r $$plugin_dir/pandora-plugin.am $$plugin_dir/.plugin.ini.stamp; \
	      done && \
              cp -a $< $@ || echo "Failed to update $@"; \
	    fi; \
	fi

plugin_libauth_pam_dir=${top_srcdir}/plugin/auth_pam
EXTRA_DIST += plugin/auth_pam/plugin.ini
